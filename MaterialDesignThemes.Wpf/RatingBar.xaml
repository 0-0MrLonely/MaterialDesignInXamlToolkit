<UserControl x:Class="MaterialDesignThemes.Wpf.RatingBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf"
             xmlns:converters="clr-namespace:MaterialDesignThemes.Wpf.Converters"
             mc:Ignorable="d" 
             Height="32" Width="180" Background="Transparent">
    <UserControl.Resources>
        <converters:RatingToBoolConverter x:Key="RatingOneConverter" Rating="1" />
        <converters:RatingToBoolConverter x:Key="RatingTwoConverter" Rating="2" />
        <converters:RatingToBoolConverter x:Key="RatingThreeConverter" Rating="3" />
        <converters:RatingToBoolConverter x:Key="RatingFourConverter" Rating="4" />
        <converters:RatingToBoolConverter x:Key="RatingFiveConverter" Rating="5" />
        
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
        
        <Style x:Key="RatingButtonOneIconImageStyle" TargetType="{x:Type Image}">
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="24" />
            <Setter Property="Source" Value="{Binding Path=DataContext.Icon, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}}" />
            <Setter Property="Visibility" Value="{Binding Path=DataContext.Icon, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Converter={StaticResource NotNullToVisibilityConverter}}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=DataContext.Rating, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Converter={StaticResource RatingOneConverter}}" Value="False">
                    <Setter Property="Opacity" Value="0.25" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=DataContext.Rating, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Converter={StaticResource RatingOneConverter}}" Value="True">
                    <Setter Property="Opacity" Value="1" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
