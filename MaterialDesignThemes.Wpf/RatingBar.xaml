    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="36"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="RatingButtonOne" Style="{StaticResource MaterialDesignRatingBarButton}" IsEnabled="{Binding Path=IsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Click="RatingButtonClick">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Style="{StaticResource RatingButtonOneIconImageStyle}" />
                <Viewbox Style="{StaticResource RatingButtonOneIconViewboxStyle}">
                    <Canvas Height="24" Width="24">
                        <Path Data="{Binding Path=DataContext.PathData, RelativeSource={RelativeSource FindAncestor, AncestorType=Button}}" Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                    </Canvas>
                </Viewbox>
            </StackPanel>
        </Button>
        <Button x:Name="RatingButtonTwo" Grid.Column="1" Style="{StaticResource MaterialDesignRatingBarButton}" IsEnabled="{Binding Path=IsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Click="RatingButtonClick">
